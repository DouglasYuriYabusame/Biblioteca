@model IEnumerable<BibliotecaVesp.Models.Livro>

@{
    ViewData["Title"] = "Index";
}

<h1>LIVRO</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idamigo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idamigo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Idlivro">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Idlivro">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Idlivro">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
